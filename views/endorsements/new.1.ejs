<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Endorse <strong><%=student.firstName%> <%=student.lastName%></strong></h1>
          <div style="display: inline">
             <img class="OP-other-avatar center-block" src="<%= student.avatar %>"> 
          </div>

        <h4 style="text-align: center;">For <strong><a href="/openclassrooms/<%=openclassroom.id%>"><%=openclassroom.name%></a></strong> </h4>
        <div style="width: 50%; margin: 30px auto;">
            <!--Need to pass through the id of the campground and include it in the route back-->
            <form action="/users/<%=student.id%>/endorsements" method="POST">
                
                <div>
                    
                    <p><strong>Which skills does <%=student.firstName%> <%=student.lastName%> master? Are there any other qualities you would like to endorse?</strong></p>
                    
                    <p>For inspiration:</p>

                    <ul>
                         <% openclassroom.swbat.forEach(function(element){ %>
                         <% if(element.length >0) { %>
                                <li><%=element%></li>
                        <% } %>
                        <% }) %>
                        
                    </ul>
                

                </div>
                
                <div class="form-group">
                    <textarea rows="4" class="form-control" name="endorsement[text]" placeholder="Write your endorsement here.."></textarea>
                    <input type="hidden" name="student[id]" value="<%=student.id%>">
                    <input type="hidden" name="student[firstName]" value="<%=student.firstName%>">
                    <input type="hidden" name="student[lastName]" value="<%=student.lastName%>">
                    <input type="hidden" name="openclassroom[id]" value="<%=openclassroom.id%>">
                    <input type="hidden" name="openclassroom[title]" value="<%=openclassroom.name%>">
                </div>         
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block"><span class="fa fa-forward"></span> Endorse</button>
                </div>
            </form>
            <a href="/openclassrooms">Go Back</a>
        </div>
    </div>

</div>



