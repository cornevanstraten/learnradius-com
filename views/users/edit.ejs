                <div class="columns">
                    <div class="column">
                        <figure class="image is-128x128">
                            <img class="OP-header-avatar" src="https://res.cloudinary.com/openclassroom/image/upload/g_face,c_thumb,w_150,h_150/<%=user.avatar%>" >
                        </figure>
                        <div class="field">
                            <label class="label" for="avatar_upload">avatar</label>
                            <input class="input" type="file" id="avatar_upload" name="avatar_upload" accept="image/*" >
                            <input id="oldImage" name="oldAvatar" value="<%=user.avatar%>" type="hidden">
                        </div>
                        <!--<div class="field">-->
                        <!--    <label for="Avatar">avatar</label>-->
                        <!--    <div class="control has-icons-left">-->
                        <!--    <input class="input" id="Avatar" type="text" name="user[avatar]" value="<%=user.avatar%>" required>-->
