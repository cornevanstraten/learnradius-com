<!--REVIEW-->
<% include ../partials/header %>


<section class="hero is-light is-fullheight review">
    <div class="hero-body">
        <div class="container">
                  <h1 class="title has-text-centered">
                    <span> review</span>
                  </h1>
                  <h2 class="subtitle has-text-centered">
                    <%=agreement.circleDetails.title%>
                  </h2>
            <div class="column is-8 is-offset-2">
            <form action="/circles/<%=agreement._id%>/reviews" method="POST">
            <div class="box">
              <div class="field">  
                <div class="control has-text-centered is-size-5">
                  <label class="radio plus1 is-size-3">
                    <input id="plus1" class="is-hidden" type="radio" name="recommend" value="recommend" checked>
                    +1 <span class="icon">
                      <i id="" class="fa fa-arrow-circle-up plus1arrow"></i>
                    </span>
                  </label>
                  <label class="radio has-text-grey-light min1">
                    <input id="min1" class="is-hidden" type="radio" name="recommend" value="false">
                    -1 <span class="icon">
                      <i id="" class="fa fa-arrow-circle-down has-text-grey-light min1arrow"></i>
                    </span>
                  </label>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <input class="input" type="text" name="review[title]" placeholder="Title">
                </div>               
              </div>                 
            <div class="field">  
              <div class="control">
                <textarea rows="3" name="review[text]" placeholder="Write your review here.." class="textarea"></textarea>
              </div>    
            </div>
            <div class="IsFinal">
              <label for="IsFinal"><input type="checkbox" class="checkbox" name="IsFinal"
               value="IsFinal" checked /> I understand that this review is final and canâ€™t be edited after submission</label>
            </div>
              <input type="submit" value="Submit" class="button is-primary is-fullwidth"><br>
            </form>
          </div>
        </div>
      </div>
    </div>
</section>




<% include ../partials/footer %>
