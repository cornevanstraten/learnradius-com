<!--Endorsement-->

<% include ../partials/header %>


<section class="hero is-light is-fullheight">
    <div class="hero-body">

        <div class="container">
                  <h1 class="title has-text-centered">
                    <span> endorse</span>
                  </h1>
                  <h2 class="subtitle has-text-centered">
                    <%=agreement.studentDetails.firstName%> <%=agreement.studentDetails.lastName%>
                  </h2>
            <div class="column is-8 is-offset-2">
            <form action="/users/<%=agreement.studentRef%>/endorsements/" method="POST">
                
            <div class="box">
              <div class="field">
                  <p>Endorse the skills <%=agreement.studentDetails.firstName%> <%=agreement.studentDetails.lastName%> demonstrated in <strong><a href="/circles/<%=agreement.circleRef%>"><%=agreement.circleDetails.title%></a></strong>.</p>
              </div>

            <div class="field">  
                <div class="control">
                  <textarea rows="4" name="endorsement[text]" placeholder="Write your endorsement here.." class="textarea"></textarea>
                  <input type="hidden" name="student[id]" value="<%=agreement.studentRef%>">
                    <input type="hidden" name="student[firstName]" value="<%=agreement.studentDetails.firstName%>">
                    <input type="hidden" name="student[lastName]" value="<%=agreement.studentDetails.lastName%>">
                    <input type="hidden" name="circle[id]" value="<%=agreement.circleRef%>">
                    <input type="hidden" name="agreement[id]" value="<%=agreement._id%>">
                </div>    
            </div>
            <div class="IsFinal">
              <label for="IsFinal"><input type="checkbox" class="checkbox" name="IsFinal" value="IsFinal" checked /> I understand that this review is final and canâ€™t be edited after submission</label>
            </div> 
            <input type="submit" value="Submit" class="button is-primary is-fullwidth">
            </form>
          </div>
        </div>
      </div>
    </div>
</section>




<% include ../partials/footer %>
