<% include ../partials/header %>

  <div class="OCR-login">
    <div class="OCR-login-overlay">
      <div class="row">
        <div class="col-md-6 OCR-login-logo">
          <h1>review: <strong>"<%=agreement.circleDetails.title%>"</strong></h1>
        </div>
        <div class="col-md-6">
          <div class="OCR-login-form">
            <form action="/circles/<%=agreement._id%>/reviews" method="POST">
              <div class="duimpjes">
                      <input id="recommendyes" type="radio" name="recommend" value="recommend" checked> 
                      <label for="recommendyes"> +1  <span class="fa fa-thumbs-o-up"></span></label>
                    <input  id="recommendno" type="radio" name="recommend" value="false"> 
                    <label for="recommendno"> -1  <span class="fa fa-thumbs-o-down"></span></label>
               </div>
              <input type="text" name="review[title]" placeholder="Title" class="OCR-login-form-input"></br>
              <textarea rows="4" name="review[text]" placeholder="Write your review here.." class="OCR-login-form-input"></textarea></br>
              <input type="submit" value="Submit" class="btn btn-xl btn-primary btn-block"><br>
            </form>
            <a href="/circles">back</a>
          </div>
        </div>
      </div>
    </div>
  </div>



