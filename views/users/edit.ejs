                    <!--    <input class="input" type="file" id="background_upload" name="background_upload" accept="image/*" >-->
                    <!--</div>-->
                    <!--</div>-->
                </div>
                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label class="label" for="firstName">first name</label>
                            <input class="input" id="firstName" type="text" name="user[firstName]" value="<%=user.firstName%>" required>
                        </div> 
                    </div>
                    <div class="column">
                        <div class="field">
                            <label class="label" for="lastName">last name</label>
                            <input class="input" id="lastName" type="text" name="user[lastName]" value="<%=user.lastName%>" required>
                        </div>
                    </div>
                </div>
                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label class="label" for="email">email (not public)</label>
                            <div class="control has-icons-left">
                            <input class="input" id="email" type="email" name="user[email]" value="<%=user.email%>" required>
                            <span class="icon is-small is-left">
                              <i class="fa fa-envelope"></i>
                            </span>
                            </div>
                        </div> 
                    </div>
                    <div class="column">
                        <div class="field">
                            <label class="label" for="location">city</label>
                            <div class="control has-icons-left">
                            <input class="input" id="location" type="text" name="user[location]" value="<%=user.location%>" required>
                            <span class="icon is-small is-left">
                              <i class="fa fa-map-marker"></i>
                            </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="description">biography</label>
                    <div class="control has-icons-left">
                    <input class="input" id="description" type="text" name="user[description]" value="<%=user.description%>">
                    <span class="icon is-small is-left">
                      <i class="fa fa-pencil"></i>
                    </span>
                    </div>
                </div>
                <div class="field">
                    <button class="button is-block is-primary is-medium is-fullwidth">edit</button>
                </div>
            </form>
            </div>
        </div>
    </div>
    </div>
</section>



