<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Review <strong>"<%=openclassroom.name%>"</strong></h1>
        <div style="width: 30%; margin: 30px auto;">
            <!--Need to pass through the id of the campground and include it in the route back-->
            <form action="/openclassrooms/<%=openclassroom.id%>/reviews" method="POST">
                <div class="form-group">
                   <label for="review[text]">Title:</label>
                    <input class="form-control" type="text" name="review[title]" placeholder="text">
                    <label for="review[text]">Review:</label>
                    <input class="form-control" type="text" name="review[text]" placeholder="text">
                </div>                
                <div>
                    <input id="recommendyes" type="radio" name="recommend" value="recommend" checked> <label for="recommendyes"> +1 <span class="fa fa-thumbs-up" style="color:green"></span></label>
                </div>
                <div>
                    <input id="recommendno" type="radio" name="recommend" value="false"> <label for="recommendno"> -1 <span class="fa fa-thumbs-down" style="color:red"></span></label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/openclassrooms">Go Back</a>
        </div>
    </div>

</div>



<% include ../partials/footer %>
